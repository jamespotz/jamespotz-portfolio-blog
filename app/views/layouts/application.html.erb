      <ul class="nav navbar-nav navbar-right">
        <li ng-class="navClass('home')"><a href="/home">Home <span class="sr-only">(current)</span></a></li>
        <li ng-class="navClass('about')"><a href="/about">About</a></li>
        <li ng-class="navClass('post')"><a href="/post">Blog</a></li>
        <li ng-show="signedIn()"><a href="/">{{ user.username }}</a></li>
        <li ng-show="signedIn()"><a href="/post/new">New Post</a></li>
        <li ng-show="signedIn()"><a ng-click="logout()">Log Out</a></li>
      </ul>
    </div>
  </div>
</nav>

